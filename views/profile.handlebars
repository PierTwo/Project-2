        </div>
        <div class="form-group">
          <label>
            Post Content
            <textarea id="post-content" placeholder="None"></textarea>
          </label>
        </div>
        <div>
          <label>Select Category
            <select id="select-category">
              <option value="4">Predictions</option>
              <option value="2">Offense</option>
              <option value="1">Defense</option>
              <option value="3">Best Play</option>
              <option value="5">Off The Field</option>
            </select>
          </label>
        </div>
        <div class="form-group">
          <p><input type="submit" class="button expanded" id="submit-button" value="Create Post!"></input></p>
        </div>
      </form>
    </div>

